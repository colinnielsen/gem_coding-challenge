{
    "editor.codeActionsOnSave": {
        "formatOnSave": true,
        "source.addMissingImports": true,
        "source.organizeImports": true
    },
    "eslint.validate": ["typescript", "typescriptreact"],
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
